{
  "env": {
      "browser": true,
      "es2021": true,
      "node": true
  },

  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 6,
      "sourceType": "module"
  },
  "plugins": [
      "react"
  ],
  "rules": {
      "block-spacing": [
          "error",
          "always"
        ],
        "no-multiple-empty-lines": [
          2,
          {
            "max": 1
          }
        ],
        "react/jsx-tag-spacing": ["error", {
          "beforeSelfClosing": "always",
          "closingSlash": "never",
          "afterOpening": "never",
          "beforeClosing": "never"
        }],
        "react/jsx-indent": ["error", 2],
        "react/no-multi-comp": [1, { "ignoreStateless": true }],
        "indent": ["error", 2, { 
          "SwitchCase" : 1
        }],
        "no-multi-spaces" : ["error"]
  }
}
